<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5B18A">

    <FrameLayout
        android:id="@+id/redTopRectangle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="top"
        android:background="@drawable/red_top_rectangle"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Witaj"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/topFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent" >

        <FrameLayout
            android:id="@+id/whiteRectangle"
            android:layout_width="340dp"
            android:layout_height="490dp"
            android:layout_gravity="center"
            android:background="@drawable/white_rectangle_with_red_border">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-200dp"
                android:text="Logowanie"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:fontFamily="@font/markazi_text"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="-110dp"
                android:fontFamily="@font/markazi_text"
                android:text="E-mail"
                android:textColor="@color/black"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="-40dp"
                android:text="Hasło"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:fontFamily="@font/markazi_text"/>

            <EditText
                android:id="@+id/emailTextEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-110dp"
                android:ems="9"
                android:inputType="text"
                android:hint="E-mail"
                android:background="@drawable/login_password_rectangle"
                android:padding="10dp"
                android:fontFamily="@font/markazi_text"/>

            <EditText
                android:id="@+id/passwordTextEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-45dp"
                android:ems="9"
                android:inputType="textPassword"
                android:hint="Hasło"
                android:background="@drawable/login_password_rectangle"
                android:padding="10dp"
                android:fontFamily="@font/markazi_text"/>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:backgroundTint="#A71D1D"
                android:text="Zaloguj się"
                android:textSize="30dp"
                android:fontFamily="@font/markazi_text"/>

            <Button
                android:id="@+id/menuRegisterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/white"
                android:text="Nie masz konta?"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:fontFamily="@font/markazi_text"
                android:onClick="clientRegisterAlertPanel"/>

            <Button
                android:id="@+id/restaurationRejestrButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="160dp"
                android:backgroundTint="@color/white"
                android:text="Zarejestruj swoją restaurację!"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:fontFamily="@font/markazi_text"
                android:onClick="restaurationRegisterAlertPanel"/>

        </FrameLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
